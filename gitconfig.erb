[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[color]
  diff = auto
  status = auto
  branch = auto
  log = auto
[push]
  default = simple
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore_global
  autocrlf = input
  editor = mvim -f
  pager = zsh -lc '/usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less -r' -
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[tag]
  sort = version:refname
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[alias]
  commit = commit -v
[color "diff-highlight"]
  oldNormal = "red"
  oldHighlight = "red 52"
  newNormal = "green"
  newHighlight = "green 22"
[pack]
  windowMemory = 100m
  SizeLimit = 100m
  threads = 1
[diff]
  compactionHeuristic = true
[tig "bind"]
  generic = <C-F> move-half-page-down
  generic = <C-B> move-half-page-up
[tig]
  main-view = line-number:no,interval=5 id:yes date:default author:full commit-title:yes,graph,refs,overflow=no

